<Page x:Class="KinectTest.PhotoVoiceControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:k="http://schemas.microsoft.com/kinect/2013"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignWidth="1280" d:DesignHeight="720" Title="Photo"
      Loaded="Page_Loaded" Background="Black">
    

    <Grid>
        <Image x:Name="Image" HorizontalAlignment="Center" Height="720" VerticalAlignment="Center" Width="1280">
            <Image.Source>
                <BitmapImage x:Name="BitmapImage1" UriSource="F:\KinectTest\KinectTest\KinectTest\Photo\1.jpg" >

                </BitmapImage>
            </Image.Source>

        </Image>
        <Label x:Name="Label1" Content="1/10" Foreground="Yellow" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="14.218,0.766" Margin="290,-8,0,0" Height="37" Width="182" FontWeight="Bold" FontSize="20"/>
        <Label x:Name="statusLabel" Content="Voice Control"  Foreground="Yellow" HorizontalAlignment="Left" Height="39" Margin="0,-8,0,0" VerticalAlignment="Top" Width="165" FontSize="20"/>

    </Grid>
</Page>
